@model WMS.Models.ReaderType

@{
    ViewBag.Title = "Delete";
}

<style>  
 dd,dt {
    margin-bottom: 5px;
}
</style>

<h3>Are you sure you want to delete this Type of Reader?</h3>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            Reader Type Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RdrTypeName)
        </dd>

        <dt>
            Vendor Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReaderVendor.VendorName)
        </dd>

    </dl>

       @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-danger" />  
                @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
            </div>
       </div>
<hr />
    }
<hr />
</div>
