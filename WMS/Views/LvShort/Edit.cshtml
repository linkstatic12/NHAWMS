@model WMS.Models.LvShort

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Short leave</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.SlID)

        @Html.HiddenFor(model => model.EmpID)

        @Html.HiddenFor(model => model.DutyDate)

        @Html.HiddenFor(model => model.EmpDate)

        <div class="form-group">
           <label class="control-label col-md-2">Emp No</label>
            <div class="col-md-2">
                @Model.Emp.EmpNo
            </div>
        </div>
        <div class="form-group">
           <label class="control-label col-md-2">Name</label>
            <div class="col-md-2">
                @Model.Emp.EmpName
            </div>
        </div>
        <div class="form-group">
           <label class="control-label col-md-2">Designation</label>
            <div class="col-md-2">
                @Model.Emp.Designation.DesignationName
            </div>
        </div>

        <div class="form-group">
           <label class="control-label col-md-2">Starting Time</label>
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.SHour,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SHour)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ending Time</label>
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.EHour,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EHour)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Remarks</label>
            <div class="col-md-4">
                @Html.TextArea("Remarks", null, new { @class = "form-control",cols = "20", rows = "3" })
                @Html.ValidationMessageFor(model => model.Remarks)
            </div>
        </div>

        @Html.HiddenFor(model => model.CreatedBy)

        @Html.HiddenFor(model => model.ApprovedBy)

       @* <div class="form-group">
            @Html.LabelFor(model => model.Status, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Status)
                @Html.ValidationMessageFor(model => model.Status)
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btn-success" />
                  @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
            </div>
        </div>
    </div>
}
