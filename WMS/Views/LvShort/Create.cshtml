@model WMS.Models.LvShort

@{
    ViewBag.Title = "Create";
}

<div>
      <form class ="form-inline" role="form">
          <div class="form-group "> <h2>Add Short Leave</h2> </div>
      </form>  
</div>
 <hr />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-2">Emp No</label>
            <div class="col-md-2">
                @*@Html.TextBoxFor(model => model.EmpID,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EmpID)*@
                @Html.TextBox("EmpNo",null,new { @class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Leave Date</label>
            <div class="col-md-2">
                @Html.EditorFor(model => model.DutyDate)
                @Html.ValidationMessageFor(model => model.DutyDate)
            </div>
        </div>

        <div class="form-group">
           <label class="control-label col-md-2">Starting Time</label>
            <div class="col-md-2">
               @* @Html.TextBoxFor(model => model.SHour,new { @value="10:00",@class = "form-control" })*@
                <input type="text" step="1" max= "2400" min= "0" id="SHour" name="SHour" class="form-control" value="1100">
                @Html.ValidationMessageFor(model => model.SHour)

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ending Time</label>
            <div class="col-md-2">
               @* @Html.TextBoxFor(model => model.EHour,new { @class = "form-control" })*@
                <input type="text" step="1" max= "2400" min= "0" id="EHour" name="EHour" class="form-control" value="1500">
                @Html.ValidationMessageFor(model => model.EHour)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Remarks</label>
            <div class="col-md-4">
                @Html.TextArea("Remarks", null, new { @class = "form-control",cols = "20", rows = "3" })
                @Html.ValidationMessageFor(model => model.Remarks)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default btn-success" />
                 @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
             </div>
        </div>
    </div>
}

<style>
    #DutyDate
    {
        width:155px;
    }
</style>