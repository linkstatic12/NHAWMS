    ViewBag.Title = "Delete";
}


<h3>Are you sure you want to delete this Location?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Location Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LocName)
        </dd>


    </dl>


       @using (Html.BeginForm()) {
