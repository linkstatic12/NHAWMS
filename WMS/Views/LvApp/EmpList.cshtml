@model PagedList.IPagedList<WMS.Models.EmpView>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Employee List";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div> 
    <div class="form-group pull-right SearchBtnMargin">
              @using (Html.BeginForm("EmpList", "LvApp", FormMethod.Get))
                {<p>Find: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string,new { @class = "form-control" })  
                 <input class="btn btn-sm btn-success" type="submit" value="Search" /></p>}
          </div> 


     <p>
    @Html.ActionLink("Back", "Create")
</p>
        <div class="table-responsive">  

        <table class="table table-bordered table-hover table-condensed">
    <tr>
        <th>
            Name
        </th>
         <th>
           Emp Number
        </th>
        <th>
            City
        </th>
        <th>
            Section
        </th>
        <th>
            Department
        </th>
        <th>
            Division
        </th>
        <th>
            Crew
        </th>
       
       
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.EmpName
        </td>
        <td>
           @item.EmpNo
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.CityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SectionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeptName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DivisionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CrewName)
        </td>
      
    </tr>
}

</table>
            <div class="form-inline">
          <div class="form-group ">@Html.PagedListPager(Model, page => Url.Action("EmpList", 
                new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))</div>
          <div class="form-group pull-right">Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</div>
</div>
            </div>
    </div>
</body>
</html>
