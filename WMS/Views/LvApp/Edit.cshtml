@model WMS.Models.LvApplication

@{
    ViewBag.Title = "Edit";
}

 <div>
      <form class ="form-inline" role="form">
          <div class="form-group "> <h3>Edit Leave</h3> </div>
      </form>  
    </div>
 <hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.LvID)

         <div class="form-group">
            <label class="control-label col-md-2">Leave Type</label>
            <div class="col-md-4">
                @Html.DropDownList("LvType",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                @Html.ValidationMessageFor(model => model.LvType)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Emp No</label>
            <div class="col-md-10">
                @Html.DropDownList("EmpID",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                @Html.ValidationMessageFor(model => model.EmpID)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">From Date</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.FromDate)
                @Html.ValidationMessageFor(model => model.FromDate)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">To Date</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.ToDate)
                @Html.ValidationMessageFor(model => model.ToDate)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Half Leave</label>
            <div class="col-md-10">
                @Html.DropDownList("Status", new List<SelectListItem>
                                    { 
                                        new SelectListItem { Text = "No", Value = "true", Selected=true},
                                        new SelectListItem { Text = "Yes", Value = "false"}
                                    },new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"}) 
                @Html.ValidationMessageFor(model => model.IsHalf)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Leave Reason</label>
            <div class="col-md-4">
                @Html.TextArea("LvReason", null, new { cols = "60", rows = "2",@class = "form-control" })
                @Html.ValidationMessageFor(model => model.LvReason)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Address during leave</label>
            <div class="col-md-4">
                @*@Html.EditorFor(model => model.LvAddress)*@
                @Html.TextArea("LvAddress", null, new { cols = "60", rows = "2",@class = "form-control" })
                @Html.ValidationMessageFor(model => model.LvAddress)
            </div>
        </div>

         <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btn-success" />
              @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
            </div>
        </div>
    </div>
}