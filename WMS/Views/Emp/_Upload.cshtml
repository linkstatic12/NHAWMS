<div id="avatar-upload-box">
    @using (Ajax.BeginForm("_Upload", "Emp", new AjaxOptions() { HttpMethod = "POST" }, new { enctype = "multipart/form-data", id = "avatar-upload-form" }))
    {
        @Html.AntiForgeryToken()
        <input type="file" name="files" /><br>
        <div class="upload-file-notice">Maximum size: <span id="avatar-max-size"></span> MB</div>
    }

    <div class="upload-progress col-md-6 hidden">
        <div class="upload-percent-value pull-left">0%</div>
        <div class="upload-percent-bar pull-left"></div>
    </div>
    <div id="upload-status"></div>
</div>

<div id="avatar-crop-box" class="hidden">
    <div class="jc-demo-box">
        <div class="col-md-12">
            <img src="" id="crop-avatar-target" alt="Uploaded image" />
            <div id="preview-pane">
                <div class="preview-container">
                    <img src="" class="jcrop-preview" alt="Preview" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <button class="btn btn-default" onclick="saveAvatar()">Save avatar</button>
            </div>
        </div>
    </div>
</div>

<div id="avatar-result" class="hidden">
    <img src="" alt="Final Image" />
</div>

<script src="~/Scripts/jquery-2.1.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.Jcrop.js"></script>
    <script src="~/Scripts/jquery.form.js"></script>
    <script src="~/Scripts/respond.js"></script>
    <script src="~/Scripts/site.avatar.js"></script>


<link href="~/Content/site.avatar.css" rel="stylesheet" type="text/css" />
<link href="~/Content/jquery.jcrop.css" rel="stylesheet" type="text/css" />
    
