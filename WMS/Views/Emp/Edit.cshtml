                                    },new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidthSmall"}) 
                                @Html.ValidationMessageFor(model => model.Gender)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">CNIC No</label>
