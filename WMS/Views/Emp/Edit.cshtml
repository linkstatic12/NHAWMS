                        </div>
                        <div class="form-group" id="EmpTypeDivID">
                            <div class = "control-label col-md-3">
                                <label for="EmpType">Employee Type</label>
                            </div>
                            <div class="col-md-3 ">
                                 <select class="btn btn-default dropdown-toggle dropdown ComboBoxWidth" id="TypeID" name="TypeID"></select>
                               @Html.HiddenFor(model => model.TypeID , new { id = "selectedTypeIdHidden" })  
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Designation</label>
