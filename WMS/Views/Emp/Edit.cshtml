                            </div>
                        </div>

                         <div class="form-group">
                            <label class="control-label col-md-3">Category</label>
                            <div class="col-md-4">
                               @Html.DropDownList("CatID",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                                @*<select class="btn btn-default dropdown-toggle dropdown ComboBoxWidth" id="CatID" name="CatID"></select>*@
