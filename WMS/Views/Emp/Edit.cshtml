                                @Html.ValidationMessageFor(model => model.CrewID)*@
                                <select class="btn btn-default dropdown-toggle dropdown ComboBoxWidth" id="CrewID" name="CrewID"></select>
                        @Html.HiddenFor(model => model.CrewID , new { id = "selectedCrewIdHidden" })         
                            </div>
                        </div>

                         <div class="form-group">
                            <label class="control-label col-md-4">Status</label>
                            <div class="col-md-4">
                                @Html.DropDownList("Status", new List<SelectListItem>
                                    { 
                                        new SelectListItem { Text = "Active", Value = "true", Selected=true},
                                        new SelectListItem { Text = "Inactive", Value = "false"}
                                    },new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"}) 
                                @Html.ValidationMessageFor(model => model.Status)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4">Over Time</label>
                            <div class="col-md-4">
                                @Html.DropDownList("HasOT", new List<SelectListItem>
                                    { 
                                        new SelectListItem { Text = "Enable", Value = "true", Selected=true},
                                        new SelectListItem { Text = "Disable", Value = "false"}
                                    },new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"}) 
                                @Html.ValidationMessageFor(model => model.HasOT)
                            </div>
                        </div>                 
                     <div class="form-group">
                            <label class="control-label col-md-4">FP ID</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.FpID, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.FpID)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4">Card No</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.CardNo, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CardNo)
                            </div>
                        </div>
                        @*   <div class="form-group">
                            <label class="control-label col-md-4">Pin Code</label>
