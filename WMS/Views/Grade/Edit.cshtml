@model WMS.Models.Grade

@{
    ViewBag.Title = "Edit";
}
 <div>
      <form class ="form-inline" role="form">
          <div class="form-group "> <h2>Edit Grade</h2> </div>
      </form>  
    </div>
 <hr />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.GradeID)

        <div class="form-group">
            <div class="control-label col-md-2">Grade</div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.GradeName, new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.GradeName)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Company Name</label>
            <div class="col-md-10">
                @Html.DropDownList("CompanyID",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                @Html.ValidationMessageFor(model => model.Company.CompName)
            </div>
        </div>

         <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btn-success" />
              @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
            </div>
        </div>
    </div>
}
