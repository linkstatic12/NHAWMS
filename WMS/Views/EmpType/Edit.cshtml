@model WMS.Models.EmpType

@{
    ViewBag.Title = "Edit";
}

 <div>
      <form class ="form-inline" role="form">
          <div class="form-group "> <h2>Edit Employee Type</h2> </div>
      </form>  
    </div>
 <hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.TypeID)

        <div class="form-group">
            <div class="control-label col-md-2">Type</div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TypeName, new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.TypeName)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Category</div>
            <div class="col-md-10">
                @Html.DropDownList("CatID", null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                @Html.ValidationMessageFor(model => model.CatID)
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">Company Name</div>
            <div class="col-md-10">
                 @Html.DropDownList("CompanyID",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                @Html.ValidationMessageFor(model => model.CompanyID)
            </div>
        </div>
         <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btn-success" />
              @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
            </div>
        </div>
    </div>
}
